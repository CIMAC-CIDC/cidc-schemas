{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "wes",
  "title": "Metadata file for WES",
  "type": "object",
  "category": "metadata",
  "description": "Metadata information for whole exome sequencing analysis.\n",
  "properties": {
    "worksheets": {
      "WES": {
        "preamble_rows": {
          "lead organization study id": {
            "$ref": "clinical_trial.json#properties/lead_organization_study_id"
          },
          "assay creator": {
            "$ref": "assays/components/assay_core.json#properties/assay_creator"
          },
          "enrichment kit": {
            "$ref": "assays/wes_assay.json#properties/enrichment_vendor_kit"
          },
          "library kit vendor": {
            "$ref": "assays/components/ngs_assay_core.json#properties/library_vendor_kit"
          },
          "sequencer platform": {
            "$ref": "assays/components/ngs_assay_core.json#properties/sequencer_platform"
          },
          "paired end reads": {
            "$ref": "assays/components/ngs_assay_core.json#properties/paired_end_reads"
          },
          "read length": {
            "$ref": "assays/components/ngs_assay_core.json#properties/read_length"
          }
        },
        "data_columns": {
          "Samples": {
            "cimac participant id": {
              "$ref": "participant.json#properties/cimac_participant_id"
            },
            "cimac sample id": {
              "$ref": "sample.json#properties/cimac_sample_id"
            },
            "cimac aliquot id": {
              "$ref": "aliquot.json#properties/cimac_aliquot_id"
            },
            "genomic source": {
              "$ref": "sample.json#properties/genomic_source"
            },
            "library kit lot": {
              "$ref": "assays/components/ngs/ngs_assay_record.json#properties/library_kit_lot"
            },
            "enrichment lot": {
              "$ref": "assays/components/ngs/wes_assay_record.json#properties/enrichment_vendor_lot"
            },
            "library prep date": {
              "$ref": "assays/components/ngs/ngs_assay_record.json#properties/library_prep_date"
            },
            "capture date": {
              "$ref": "assays/components/ngs/wes_assay_record.json#properties/capture_date"
            },
            "dna input ng": {
              "$ref": "assays/components/ngs/ngs_assay_record.json#properties/input_ng"
            },
            "library yield ng": {
              "$ref": "assays/components/ngs/ngs_assay_record.json#properties/library_yield_ng"
            },
            "average insert size": {
              "$ref": "assays/components/ngs/ngs_assay_record.json#properties/average_insert_size"
            },
            "forward fastq": {
              "allOf": [
                {
                  "$ref": "assays/components/local_file.json#properties/file_path"
                },
                {
                  "artifact_link": "assays/components/fastq_pair_and_mapping/fastq_1"
                }
              ]
            },
            "reverse fastq": {
              "allOf": [
                {
                  "$ref": "assays/components/local_file.json#properties/file_path"
                },
                {
                  "artifact_link": "assays/components/fastq_pair_and_mapping/fastq_2"
                }
              ]
            },
            "read group mapping file": {
              "allOf": [
                {
                  "$ref": "assays/components/local_file.json#properties/file_path"
                },
                {
                  "artifact_link": "assays/components/fastq_pair_and_mapping/read_group_mapping_file"
                }
              ]
            }
          }
        }
      }
    }
  }
}
