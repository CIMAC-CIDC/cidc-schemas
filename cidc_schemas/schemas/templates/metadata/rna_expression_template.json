{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "rna_expression",
  "title": "Metadata file for RNA expression",
  "type": "object",
  "category": "metadata",
  "description": "Metadata information for rna expression analysis.\n",
  "properties": {
    "worksheets": {
      "RNA": {
        "preamble_rows": {
          "lead organization study id": {
            "$ref": "clinical_trial.json#properties/lead_organization_study_id"
          },
          "assay creator": {
            "$ref": "assays/components/assay_core.json#properties/assay_creator"
          },
          "assay category": {
            "$ref": "assays/components/assay_core.json#properties/assay_category"
          },
          "enrichment method": {
            "$ref": "assays/rna_expression_assay.json#properties/enrichment_method"
          },
          "enrichment kit": {
            "$ref": "assays/rna_expression_assay.json#properties/enrichment_vendor_kit"
          },
          "stranded library": {
            "$ref": "assays/rna_expression_assay.json#properties/stranded_library"
          },
          "library type": {
            "$ref": "assays/rna_expression_assay.json#properties/library_type"
          },
          "library kit vendor": {
            "$ref": "assays/components/ngs.json#properties/library_vendor_kit"
          },
          "sequencer platform": {
            "$ref": "assays/components/ngs.json#properties/sequencer_platform"
          },
          "paired end reads": {
            "$ref": "assays/components/ngs.json#properties/paired_end_reads"
          },
          "read length": {
            "$ref": "assays/components/ngs.json#properties/read_length"
          }
        },
        "data_columns": {
          "Samples": {
            "cimac participant id": {
              "$ref": "participant.json#properties/cimac_participant_id"
            },
            "cimac aliquot id": {
              "$ref": "aliquot.json#properties/cimac_aliquot_id"
            },
            "genomic source": {
              "$ref": "sample.json#properties/genomic_source"
            },
            "library kit lot": {
              "$ref": "assays/components/ngs/ngs_entry.json#properties/library_kit_lot"
            },
            "enrichment lot": {
              "$ref": "assays/components/ngs/rna_expression_entry.json#properties/enrichment_vendor_lot"
            },
            "library prep date": {
              "$ref": "assays/components/ngs/ngs_entry.json#properties/library_prep_date"
            },
            "capture date": {
              "$ref": "assays/components/ngs/rna_expression_entry.json#properties/capture_date"
            },
            "sequencing batch": {
              "$ref": "assays/components/ngs/rna_expression_entry.json#properties/sequencing_batch"
            },
            "dna input ng": {
              "$ref": "assays/components/ngs/ngs_entry.json#properties/input_ng"
            },
            "library yield ng": {
              "$ref": "assays/components/ngs/ngs_entry.json#properties/library_yield_ng"
            },
            "average insert size": {
              "$ref": "assays/components/ngs/ngs_entry.json#properties/average_insert_size"
            },
            "forward fastq": {
              "$ref": "assays/components/local_file.json#properties/file_path"
            },
            "reverse fastq": {
              "$ref": "assays/components/local_file.json#properties/file_path"
            },
            "read group mapping file": {
              "$ref": "assays/components/local_file.json#properties/file_path"
            }
          }
        }
      }
    }
  }
}
