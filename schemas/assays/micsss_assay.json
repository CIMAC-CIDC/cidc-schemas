{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "micsss",
  "title": "MICSSS Assay",
  "type": "object",
  "description": "Multiplexed immunohistochemical consecutive staining on single slide",
  "allOf:": [
    { "ref": "assays/components/assay_core.json" },
    { "ref": "assays/components/antibody.json" },
    { "ref": "assays/components/image.json" },
    { "ref": "assays/components/imaging_data.json" },
    { "ref": "assays/components/micsss_antibody.json" }
  ],
  "properties": {
    "project_qupath_folder": {
      "type": "string"
    },
    "micsss_exported_data_folder": {
      "type": "string"
    },
    "properties": {
      "core_data": {
        "type": "array",
        "items": {
          "$ref": "assays/components/assay_core.json"
        }
      },
      "antibodies": {
        "type": "array",
        "items": {
          "$ref": "assays/components/antibody.json"
        }
      },
      "images": {
        "type": "array",
        "items": {
          "$ref": "assays/components/image.json"
        }
      },
      "imaging_data": {
        "type": "array",
        "items": {
          "$ref": "assays/components/imaging_data.json"
        }
      },
      "micsss_antibodies": {
        "type": "array",
        "items": {
          "$ref": "assays/components/micsss_antibody.json"
        }
      }
    }
  },
  "required": [
    "project_qupath_folder",
    "micsss_exported_data_folder",
    "core_data",
    "antibodies",
    "images",
    "imaging_data",
    "micsss_antibodies"
  ],
  "files": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "composite_image": {
          "$ref": "artifacts/artifact_core.json#properties/uuid"
        },
        "component_data": {
          "$ref": "artifacts/artifact_core.json#properties/uuid"
        },
        "output_summary": {
          "$ref": "artifacts/artifact_core.json#properties/uuid"
        },
        "binary_seg_map": {
          "$ref": "artifacts/artifact_core.json#properties/uuid"
        },
        "cell_seg_data": {
          "$ref": "artifacts/artifact_core.json#properties/uuid"
        },
        "cell_seg_data_summary": {
          "$ref": "artifacts/artifact_core.json#properties/uuid"
        },
        "phenotype_map": {
          "$ref": "artifacts/artifact_core.json#properties/uuid"
        },
        "region_seg_map": {
          "$ref": "artifacts/artifact_core.json#properties/uuid"
        }
      }
    }
  }
}
