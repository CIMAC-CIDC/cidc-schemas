{
  "$schema": "metaschema/strict_meta_schema.json#",
  "$id": "artifact_elisa_xlsx",
  "title": "ELISA results artifact",
  "type": "object",
  "description": "Information about an ELISA file.",
  "$comment": "TODO Maybe add array of antibodies parsing.",
  "additionalProperties": false,
  "properties": {
    "number_of_samples": {
      "description": "Number of samples within this file.",
      "type": "integer"
    },
    "samples": {
      "description": "Ids of the sample(s) within this file.",
      "type": "array",
      "items": {
        "$comment": "Ids of the sample(s) within this file.",
        "$ref": "sample.json#properties/cimac_id"
      }
    },
    "data_format": {
      "description": "Data format.",
      "const": "ELISA"
    },
    "upload_placeholder": {"$comment": "defined in artifacts/artifact_core.json"},
    "artifact_creator": {"$comment": "defined in artifacts/artifact_core.json"},
    "uploader": {"$comment": "defined in artifacts/artifact_core.json"},
    "uuid": {"$comment": "defined in artifacts/artifact_core.json"},
    "file_name": {"$comment": "defined in artifacts/artifact_core.json"},
    "object_url": {"$comment": "defined in artifacts/artifact_core.json"},
    "uploaded_timestamp": {"$comment": "defined in artifacts/artifact_core.json"},
    "file_size_bytes": {"$comment": "defined in artifacts/artifact_core.json"},
    "md5_hash": {"$comment": "defined in artifacts/artifact_core.json"},
    "crc32c_hash": {"$comment": "defined in artifacts/artifact_core.json"},
    "visible": {"$comment": "defined in artifacts/artifact_core.json"},
    "artifact_category": {"$comment": "defined in artifacts/artifact_core.json"}
  },
  "allOf": [
    {
      "$ref": "artifacts/artifact_core.json"
    }
  ],
  "mergeStrategy": "objectMerge",
  "anyOf": [
    { "required": ["number_of_samples", "samples"] },
    { "required": ["upload_placeholder"] }
  ]
}
