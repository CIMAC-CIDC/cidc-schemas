{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "wes_pair_analysis",
  "title": "WES Pair Analysis Output Files",
  "type": "object",
  "description": "Whole Exome Sequencing assay output files for a tumor normal pair of samples.",
  "additionalProperties": false,
  "properties": {
    "normal_cimac_id": {
      "$comment": "Id of a normal sample within this clinical trial, that this analysis is based upon.",
      "$ref": "sample.json#properties/cimac_id"
    },
    "tumor_cimac_id": {
      "$comment": "Id of a tumor sample within this clinical trial, that this analysis is based upon.",
      "$ref": "sample.json#properties/cimac_id"
    },
    "alignment": {
      "$ref": "assays/components/alignment.json"
    },
    "somatic": {
      "$ref": "assays/components/somatic.json"
    },
    "germline": {
      "$ref": "assays/components/germline.json"
    },
    "hla": {
      "$ref": "assays/components/hla.json"
    },
    "neoantigen": {
      "$ref": "assays/components/neoantigen.json"
    },
    "coverage_metrics": {
      "$ref": "assays/components/coverage_metrics.json"
    },
    "copynumber.json": {
      "$ref": "assays/components/copynumber.json"
    },
    "purity.json": {
      "$ref": "assays/components/purity.json"
    },
    "clonality.json": {
      "$ref": "assays/components/clonality.json"
    }
  },
  "required": [
    "normal_cimac_id",
    "tumor_cimac_id",
    "somatic"
  ]
}