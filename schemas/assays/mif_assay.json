{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "mif",
  "title": "mIF Assay",
  "type": "object",
  "description": "Multiplex immunoflourescence",
  "allOf": [
    { "$ref": "assays/components/assay_core.json" },
    { "$ref": "assays/components/image.json" },
    { "$ref": "assays/components/imaging_data.json" }
  ],
  "properties": {
    "project_inform_folder": {
      "type": "string"
    },
    "mif_exported_data_folder": {
      "type": "string"
    },
    "antibody": {
      "type": "array",
      "items": {
        "$ref": "assays/components/mif_antibody.json"
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "whole_slide_image": {
            "$ref": "artifacts/artifact_core.json#properties/uuid"
          },
          "roi_annotation": {
            "$ref": "artifacts/artifact_core.json#properties/uuid"
          },
          "output_summary": {
            "$ref": "artifacts/artifact_core.json#properties/uuid"
          }
        },
        "rois": {
          "type": "array",
          "items": {
            "binary_seg_map": {
              "$ref": "artifacts/artifact_core.json#properties/uuid"
            },
            "cell_seg_data": {
              "$ref": "artifacts/artifact_core.json#properties/uuid"
            },
            "cell_seg_data_summary": {
              "$ref": "artifacts/artifact_core.json#properties/uuid"
            },
            "component_data": {
              "$ref": "artifacts/artifact_core.json#properties/uuid"
            },
            "composite_image": {
              "$ref": "artifacts/artifact_core.json#properties/uuid"
            },
            "phenotype_map": {
              "$ref": "artifacts/artifact_core.json#properties/uuid"
            },
            "score_data": {
              "$ref": "artifacts/artifact_core.json#properties/uuid"
            },
            "region_seg_map": {
              "$ref": "artifacts/artifact_core.json#properties/uuid"
            }
          }
        }
      }
    }
  },
  "required": ["project_inform_folder", "mif_exported_data_folder", "antibody"]
}
