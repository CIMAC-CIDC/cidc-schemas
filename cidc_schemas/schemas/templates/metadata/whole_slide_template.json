{
  "title": "Metadata file for Whole Slide",
  "description": "Metadata information for Whole Slide Imaging analysis.",
  "properties": {
      "worksheets": {
          "Whole Slide": {
              "prism_preamble_object_schema": "assays/whole_slide_assay.json",
              "prism_preamble_object_pointer": "/assays/whole_slide/0",
              "prism_data_object_pointer": "/records/-",
              "preamble_rows": {
                "protocol identifier": {
                      "merge_pointer": "3/protocol_identifier",
                      "type_ref": "clinical_trial.json#properties/protocol_identifier"
                  },
                  "assay creator": {
                      "merge_pointer": "0/assay_creator",
                      "type_ref": "assays/components/assay_core.json#properties/assay_creator"
                  }
              },
              "data_columns": {
                  "Samples": {
                      "cimac id": {
                          "merge_pointer": "0/cimac_id",
                          "type_ref": "sample.json#properties/cimac_id"
                      },
                      "Whole Slide image": {
                          "merge_pointer": "0/files/whole_slide_image",
                          "is_artifact": 1,
                          "gcs_uri_format": "{protocol identifier}/whole_slide/{cimac id}/whole_slide_image.svs",
                          "type_ref": "assays/components/local_file.json#properties/file_path"
                      },
                      "comment": {
                            "merge_pointer": "0/comment",
                            "type_ref": "assays/components/imaging/whole_slide_entry.json#properties/comment",
                            "allow_empty": true
                        }
                  }
              }
          }
      }
  }
}
