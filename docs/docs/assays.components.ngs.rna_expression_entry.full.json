                                            "enum": [
                                                "DFCI",
                                                "Mount Sinai",
                                                "Stanford",
                                                "MD Anderson"
                                            ],
                                            "type": "string"
                                        },
                                        "assay_category": {
                                            "description": "Assay category.",
                                            "enum": [
                                                "Whole Exome Sequencing (WES)",
                                                "RNASeq",
                                                "Conventional Immunohistochemistry",
                                                "Multiplex Immunohistochemistry",
                                                "Multiplex Immunofluorescence",
                                                "CyTOF",
                                                "OLink",
                                                "NanoString",
                                                "ELISpot",
                                                "Multiplexed Ion-Beam Imaging (MIBI)",
                                                "Other",
                                                "None"
                                            ],
                                            "type": "string"
                                        },
                                        "file_name": {
                                            "description": "The name of the file with extension",
                                            "type": "string"
                                        },
                                        "file_size_bytes": {
