{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "wes_entry",
  "title": "WES assay record",
  "type": "object",
  "description": "A single data record from WES assay.",
  "additionalProperties": false,
  "allOf": [
    { "$ref": "assays/components/ngs/ngs_assay_record.json" }
  ],
  "properties": {
    "enrichment_vendor_lot": {
      "description": "Lot number for the bait set.",
      "type": "string"
    },
    "capture_date": {
      "description": "Date of the hybrid capture enrichment.",
      "type": "string",
      "format": "date"
    },
    "output_files": {
            "$ref": "assays/components/ngs/wes_sample_analysis.json"
    },
    "cimac_id": {"comment": "defined in ngs_assay_record.json"},
    "files": {"comment": "defined in ngs_assay_record.json"},
    "library_kit_lot": {"comment": "defined in ngs_assay_record.json"},
    "library_prep_date": {"comment": "defined in ngs_assay_record.json"},
    "input_ng": {"comment": "defined in ngs_assay_record.json"},
    "library_yield_ng": {"comment": "defined in ngs_assay_record.json"},
    "average_insert_size": {"comment": "defined in ngs_assay_record.json"}
  },
  "mergeStrategy": "objectMerge",
  "required": [
      "enrichment_vendor_lot"
    ]
}
