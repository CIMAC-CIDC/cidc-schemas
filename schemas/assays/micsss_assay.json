{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "micsss",
  "title": "MICSSS Assay",
  "description": "Multiplexed immunohistochemical consecutive staining on single slide",
  "definitions": {
    "data_properties": {
      "type": "object",
      "properties": {
        "project_qupath_folder": {
          "type": "string"
        },
        "micsss_exported_data_folder": {
          "type": "string"
        }
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cimac_sample_id": {
            "ref": "sample.json#properties/cimac_sample_id"
          },
          "cimac_aliquot_id": {
            "ref": "aliquot.json#properties/cimac_aliquot_id"
          },
          "composite_image": {
            "$ref": "artifacts/image_artifact.json"
          },
          "component_data": {
            "$ref": "artifacts/image_artifact.json"
          },
          "output_summary": {
            "$ref": "artifacts/csv_artifact.json"
          },
          "binary_seg_map": {
            "$ref": "artifacts/image_artifact"
          },
          "cell_seg_data": {
            "$ref": "artifacts/csv_artifact.json"
          },
          "cell_seg_data_summary": {
            "$ref": "artifacts/csv_artifact"
          },
          "phenotype_map": {
            "$ref": "artifacts/image_artifact.json"
          },
          "region_seg_map": {
            "$ref": "artifacts/image_artifact.json"
          }
        }
      }
    },
    "data_row": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#definitions/data_properties"
        }
      ]
    }
  },
  "allOf": [
    {
      "$ref": "assays/components/image.json"
    },
    {
      "properties": {
        "antibody": {
          "type": "array",
          "items": {
            "$ref": "assays/components/micsss_antibody.json"
          }
        },
        "data": {
          "type": "array",
          "items": { "$ref": "#definitions/data_row" }
        }
      }
    }
  ],
  "required": []
}
