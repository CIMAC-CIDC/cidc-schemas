{
    "$schema": "metaschema/strict_meta_schema.json#",
    "$id": "tcr_analysis",
    "title": "TCR Output Files",
    "description": "Output files generated from the TCRseq assay: TRA and TRB clones",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "batches": {
            "type": "array",
            "mergeStrategy": "arrayMergeById",
            "mergeOptions": {
                "idRef": "/batch_id"
            },

            "items": {
                "description": "Output files generated from the TCRseq assay: TRA and TRB clones",
                "type": "object",
                "additionalProperties": false,

                "properties": {
                    "batch_id": {
                        "$ref": "assays/tcr_assay.json#properties/batch_id"
                    },
                    "report_trial": {
                        "$ref": "artifacts/artifact_gz.json"
                    },
                    "summary_info": {
                        "$ref": "artifacts/artifact_csv.json"
                    },
                    "records": {
                        "type": "array",
                        "mergeStrategy": "arrayMergeById",
                        "mergeOptions": {
                            "idRef": "/cimac_id"
                        },
                        "items": {
                            "description": "Output files generated from the TCRseq assay: TRA and TRB clones",
                            "type": "object",
                            "additionalProperties": false,

                            "properties": {
                                "cimac_id": {
                                    "$comment": "Id of a sample within this clinical trial, that this record is based upon.",
                                    "$ref": "sample.json#properties/cimac_id"
                                },
                                "tra_clone": {
                                    "$ref": "artifacts/artifact_csv.json"
                                },
                                "trb_clone": {
                                    "$ref": "artifacts/artifact_csv.json"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}