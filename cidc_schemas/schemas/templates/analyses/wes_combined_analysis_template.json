{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "wes_combined_analysis",
    "title": "WES analysis template",
    "type": "object",
    "category": "analysis",
    "description": "Metadata information for WES Analysis output.",
    "prism_template_root_object_schema": "assays/wes_assay.json",
    "prism_template_root_object_pointer": "/assays/wes/0",
    "properties": {
        "worksheets": {
            "WES Analysis": {
                "preamble_rows": {
                    "protocol identifier": {
                        "merge_pointer": "3/protocol_identifier",
                        "type_ref": "clinical_trial.json#properties/protocol_identifier"
                    }
                },
                "prism_data_object_pointer": "/records/-",
                "data_columns": {
                    "WES Runs": {
                        "tumor cimac id": {
                            "merge_pointer": "0/output_files/tumor_cimac_id",
                            "type_ref": "sample.json#properties/cimac_id"
                        },
                        "normal cimac id": {
                            "merge_pointer": "0/output_files/normal_cimac_id",
                            "type_ref": "sample.json#properties/cimac_id"
                        },
                        "root dir": {
                            "merge_pointer": "0/output_files",
                            "type_ref": "assays/components/local_file.json#properties/file_path"
                        }
                    }
                }
            }
        }
    }
}