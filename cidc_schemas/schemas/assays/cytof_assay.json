{
    "$schema": "metaschema/strict_meta_schema.json#",
    "$id": "cytof",
    "title": "CYTOF Run",
    "type": "object",
    "description": "Base information about the acquisition and analysis CyTOF data.",
    "additionalProperties": false,
    "allOf": [
        {"$ref": "assays/components/assay_core.json"}
    ],
    "properties": {
        "assay_creator": {"$ref": "assays/components/assay_core.json#properties/assay_creator"},
        "assay_run_id": {
            "type": "string",
            "description": "User defined unique identifier for this assay run."
        },
        "cytof_antibodies": {
            "type": "array",
            "description": "Data specific to antibody preparation on the CyTOF assay.",
            "items": {
                "$ref": "assays/components/cytof/cytof_antibody.json"
            },
            "mergeStrategy": "append"
        },
        "injector": {
            "description": "Name of Injector component used as part of the CyTOF software",
            "type": "string"
        },
        "date_of_acquisition": {
            "description": "Date of CyTOF batch acquisition.",
            "type": "string"
        },
        "bead_removal": {
            "description": "Boolean to indicate whether beads have been removed",
            "type": "boolean"
        },
        "acquisition_buffer": {
            "description": "Cell staining buffer used for antibody and cell dilution.",
            "type": "string"
        },
        "instrument": {
            "description": "Name of CyTOF instrument on which experiment was conducted.",
            "type": "string"
        },
        "spike_in_fcs": {
            "$ref": "artifacts/artifact_fcs.json"
        },
        "normalization_method":{
            "description": "Process used for normalization prior to analysis, if any.",
            "type": "string",
            "enum": ["Fluidigm", "Other"] 
        },
        "debarcoding_method": {
            "description": "Process used for debarcoding, if any.",
            "type": "string",
            "enum": ["Fluidigm", "Other"] 
        },
        "harware_version": {
            "description": "Version no. of instrument hardware used.",
            "type": "string"
        },
        "source_fcs": {
            "type": "array",
            "items": {
                "$ref": "artifacts/artifact_fcs.json"
            }
        },
        "controls_fcs": {
            "type": "array",
            "items": {
                "$ref": "artifacts/artifact_fcs.json"
            }
        },
        "batch_id": {
            "description": "CyTOF batch identification number.",
            "type": "string"
        },
        "astrolabe_reports": {
            "$ref": "artifacts/artifact_zip.json"
        },
        "astrolabe_analysis": {
            "$ref": "artifacts/artifact_zip.json"
        },
        "records": {
            "type": "array",
            "description": "A single data record from CyTOF assay batch.",
            "items": {
                "$ref": "assays/components/cytof/cytof_entry.json"
            },
            "mergeStrategy": "arrayMergeById",
            "mergeOptions": {
              "idRef": "cimac_id"
            }
        }
    },
    "required": [
        "cytof_antibodies",
        "records",
        "assay_run_id"
    ],
    "mergeStrategy": "objectMerge"
}

