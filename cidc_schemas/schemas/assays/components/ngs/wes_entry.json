{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "wes_assay_record",
  "title": "WES assay record",
  "type": "object",
  "description": "A single data record from WES assay",
  "allOf": [
    { "$ref": "assays/components/ngs/ngs_entry.json" }
  ],
  "properties": {
    "enrichment_vendor_lot": {
      "description": "Lot number for the bait set",
      "type": "string"
    },
    "capture_date": {
      "description": "Date of the hybrid capture enrichment",
      "type": "string",
      "format": "date"
    },
    "files": {
      "$ref": "assays/components/ngs/wes_input.json"
    }
  },
  "mergeStrategy": "objectMerge",
  "required": [
      "enrichment_vendor_lot"
    ]
}
