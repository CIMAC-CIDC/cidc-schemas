{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "imaging_data",
  "title": "Imaging Data",
  "description": "Shared schema for experiments involving the use of imaging data",
  "properties": {
    "internal_slide_id": {
      "type": "string"
    },
    "protocol_name": {
      "type": "string"
    },
    "staining_date": {
      "type": "string",
      "format": "date"
    },
    "imaging_date": {
      "type": "string",
      "format": "date"
    },
    "imaging_status": {
      "type": "string",
      "enum": ["Yes", "No"]
    }
  },
  "required": ["internal_slide_id"]
}
