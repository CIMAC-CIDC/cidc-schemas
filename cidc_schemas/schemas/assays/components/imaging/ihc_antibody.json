{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ihc_antibody",
  "title": "IHC antibody",
  "description": "Data specific to antibody preparation for Immunohistochemical analysis.",
  "additionalProperties": false,
  "allOf": [{ "$ref": "assays/components/antibody.json" }],
  "properties": {
    "antibody": {"$comment": "defined in assays/components/antibody.json"},
    "clone": {"$comment": "defined in assays/components/antibody.json"},
    "company": {"$comment": "defined in assays/components/antibody.json"},
    "cat_num": {"$comment": "defined in assays/components/antibody.json"},
    "lot_num": {"$comment": "defined in assays/components/antibody.json"},

    "dilution": {
      "description": "Concentration ratio for antibody dilution.",
      "type": "string"
    },
    "incubation_time": {
      "description": "Time duration of antibody incubation.",
      "type": "string",
      "format": "time"
    },
    "incubation_temp": {
      "description": "Temperature used for antibody incubation.",
      "type": "string"
    }
  },
  "required": ["dilution", "incubation_time", "incubation_temp"]
}