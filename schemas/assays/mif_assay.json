{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "mif",
  "title": "mIF Assay",
  "description": "Multiplex immunoflourescence",
  "definitions": {
    "data_properties": {
      "type": "object",
      "properties": {
        "project_inform_folder": {
          "type": "string"
        },
        "mif_exported_data_folder": {
          "type": "string"
        }
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cimac_sample_id": {
            "ref": "sample.json#properties/cimac_sample_id"
          },
          "cimac_aliquot_id": {
            "ref": "aliquot.json#properties/cimac_aliquot_id"
          },
          "whole_slide_image": {
            "$ref": "artifacts/image_artifact.json"
          },
          "roi_annotation": {
            "$ref": "artifacts/binary_artifact.json"
          },
          "output_summary": {
            "$ref": "artifacts/csv_artifact.json"
          }
        },
        "rois": {
          "type": "array",
          "items": {
            "binary_seg_map": {
              "$ref": "artifacts/csv_artifact.json"
            },
            "cell_seg_data": {
              "$ref": "artifacts/csv_artifact.json"
            },
            "cell_seg_data_summary": {
              "$ref": "artifacts/csv_artifact.json#"
            },
            "component_data": {
              "$ref": "artifacts/image_artifact.json"
            },
            "composite_image": {
              "$ref": "artifacts/image_artifact.json"
            },
            "phenotype_map": {
              "$ref": "artifacts/csv_artifact.json"
            },
            "score_data": {
              "$ref": "artifacts/csv_artifact.json"
            },
            "region_seg_map": {
              "$ref": "artifacts/image_artifact.json"
            }
          }
        }
      }
    },
    "data_row": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#definitions/data_properties"
        }
      ]
    }
  },
  "allOf": [
    {
      "$ref": "assays/components/image.json"
    },
    {
      "properties": {
        "antibody": {
          "type": "array",
          "items": {
            "$ref": "assays/components/mif_antibody.json"
          }
        },
        "data": {
          "type": "array",
          "items": { "$ref": "#definitions/data_row" }
        }
      }
    }
  ],
  "required": []
}
