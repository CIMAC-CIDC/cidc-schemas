{
    "$id": "participant",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "The collection of all data related to a specific participant in the context of a specific clinical trial.\n",
    "properties": {
        "arm_id": {
            "description": "Identifies the trial arm to which the participant belongs. Example: Arm A.",
            "type": "string"
        },
        "cimac_participant_id": {
            "description": "Participant identifier assigned by the CIMAC-CIDC Network. Example: CIMAC-1234.",
            "required": true,
            "type": "string"
        },
        "cohort_id": {
            "description": "Identifies the treatment cohort to which the participant belongs. Example: Cohort A.",
            "type": "string"
        },
        "ethnicity": {
            "description": "'NIH Racial and Ethnic Categories and Definitions for NIH Diversity Programs and for Other Reporting Purposes (NOT-OD-15-089),  Release Date: April 8, 2015.'\n",
            "enum": [
                "Hispanic or Latino",
                "Not Hispanic or Latino",
                "Not reported",
                "Unknown",
                "Other"
            ],
            "type": "string"
        },
        "gender": {
            "description": "Identifies the gender of the participant.",
            "enum": [
                "Male",
                "Female",
                "Not Specified",
                "Other"
            ],
            "type": "string"
        },
        "race": {
            "description": "'NIH Racial and Ethnic Categories and Definitions for NIH Diversity Programs and for Other Reporting Purposes (NOT-OD-15-089),  Release Date: April 8, 2015.'\n",
            "enum": [
                "American Indian/Alaska Native",
                "Asian",
                "Black/African American",
                "Native Hawaiian/Pacific Islander",
                "White",
                "Not Reported",
                "Unknown",
                "Other"
            ],
            "type": "string"
        },
        "samples": {
            "items": {
                "$id": "sample",
                "$schema": "http://json-schema.org/draft-07/schema#",
                "description": "Any material sample taken from a biological entity for testing, diagnostic, propagation, treatment or research purposes, including a sample obtained from a living organism or taken from the biological object after halting of all its life functions. Biospecimen can contain one or more components including but not limited to cellular molecules, cells, tissues, organs, body fluids, embryos, and body excretory products.",
                "properties": {
                    "aliquots": {
                        "items": {
                            "$id": "aliquot",
                            "$schema": "http://json-schema.org/draft-07/schema#",
                            "description": "Pertaining to a portion (volume or weight) of the whole.",
                            "properties": {
                                "cimac_aliquot_id": {
                                    "description": "Aliquot identifier assigned by the CIMAC-CIDC Network. Example: CIMAC-12453.",
                                    "type": "string"
                                },
                                "extracted_concentration": {
                                    "description": "The concentration of biological material that was extracted from this sample.",
                                    "type": "string"
                                },
                                "fibrosis_percent_area": {
                                    "description": "Percent area of fibrotic area. Example: 15",
                                    "type": "number"
                                },
                                "lymphocyte_influx": {
                                    "description": "Extent of lymphocytic infiltration into the tumor stroma or surrounding environment. Example: 2",
                                    "type": "string"
                                },
                                "material_extracted": {
                                    "description": "The type of biological material that was extracted from this sample.",
                                    "enum": [
                                        "DNA",
                                        "RNA",
                                        "cfDNA",
                                        "Other"
                                    ],
                                    "type": "string"
                                },
                                "material_remaining": {
                                    "description": "Receiving site indicates how much material remains after assay use.",
                                    "type": "number"
                                },
                                "material_used": {
                                    "description": "Receiving site indicates how much material was used for assay purposes.",
                                    "type": "number"
                                },
                                "necrosis_percent_area": {
                                    "description": "Percent area of necrotic tissue . Example: 5",
                                    "type": "number"
                                },
                                "pbmc_aliquoted": {
                                    "description": "Site or biobank provides the final number of PBMCs per vial that were frozen.",
                                    "type": "number"
                                },
                                "pbmc_recovered": {
                                    "description": "Receiving site determines number fo PBMCs per vial recovered upon receipt.",
                                    "type": "number"
                                },
                                "quantity": {
                                    "description": "Quantity of each sample shipped.",
                                    "type": "integer"
                                },
                                "sample_amount": {
                                    "description": "The amount of extracted sample shipped. Example: 400 ng",
                                    "type": "string"
                                },
                                "sample_quality_status": {
                                    "description": "Final status of sample after QC and pathology review.",
                                    "enum": [
                                        "Usable for Assay",
                                        "Not Usable for Assay",
                                        "Verifying",
                                        "Other"
                                    ],
                                    "type": "string"
                                },
                                "sample_replacement": {
                                    "description": "Status of sample if replacement is/was requested.",
                                    "enum": [
                                        "Replacement Requested",
                                        "Replacement Tested",
                                        "N/A"
                                    ],
                                    "type": "string"
                                },
                                "sample_source": {
                                    "description": "Indicates the specimen source of the sample shipped. Example: Na Heparin blood draw aliquots (2 of three), FFPE block #52",
                                    "type": "string"
                                },
                                "sample_status": {
                                    "description": "Status of sample used for other assay, exhausted, destroyed, or returned.",
                                    "enum": [
                                        "Sample Returned",
                                        "Sample Exhausted",
                                        "Remainder used for other Assay",
                                        "Other",
                                        "Sample Leftover"
                                    ],
                                    "type": "string"
                                },
                                "units": {
                                    "description": "The unit of biological material from this sample.",
                                    "enum": [
                                        "\u00b5L",
                                        "mL",
                                        "mg",
                                        "ng",
                                        "Vials",
                                        "Slides",
                                        "Scrolls",
                                        "Blocks",
                                        "ng/\u00b5L",
                                        "cells/ml",
                                        "N/A",
                                        "Other"
                                    ],
                                    "type": "string"
                                },
                                "viable_stroma_percent_area": {
                                    "description": "Percent area of viable tissue . Example: 10",
                                    "type": "string"
                                },
                                "viable_tumor_percent_area": {
                                    "description": "Percent area that contains viable tumor cells . Example: 60",
                                    "type": "number"
                                },
                                "volume_quantity": {
                                    "description": "Volume of sample shipped.",
                                    "type": "number"
                                }
                            },
                            "required": [
                                "cimac_aliquot_id"
                            ],
                            "title": "Aliquot",
                            "type": "object"
                        },
                        "mergeOptions": {
                            "idRef": "/cimac_aliquot_id"
                        },
                        "mergeStrategy": "arrayMergeById",
                        "type": "array"
                    },
                    "blood_collection_date": {
                        "description": "Date of blood collection.",
                        "format": "date",
                        "type": "string"
                    },
                    "blood_collection_time": {
                        "description": "Time of blood collection.",
                        "format": "time",
                        "type": "string"
                    },
                    "blood_processing_date": {
                        "description": "Date of blood processing.",
                        "format": "date",
                        "type": "string"
                    },
                    "blood_processing_time": {
                        "description": "Time of blood processing.",
                        "format": "time",
                        "type": "string"
                    },
                    "cimac_sample_id": {
                        "description": "Specimen identifier assigned by the CIMAC-CIDC Network. Example: CIMAC-12453.",
                        "type": "string"
                    },
                    "genomic_source": {
                        "description": "The type of material submitted - tumor/normal/etc",
                        "enum": [
                            "Tumor",
                            "Normal",
                            "Metastasis"
                        ],
                        "type": "string"
                    },
                    "sample_location": {
                        "description": "Sample location within the shipping container. Example: A1.",
                        "type": "string"
                    },
                    "site_sample_id": {
                        "description": "Sample identifier assigned by the biorepository site. Example: EA123-45.",
                        "type": "string"
                    },
                    "specimen_analyte": {
                        "description": "",
                        "enum": [
                            "H&E slide",
                            "Unstained slide",
                            "DNA",
                            "RNA",
                            "Protein Lysate"
                        ],
                        "type": "string"
                    },
                    "specimen_format": {
                        "description": "The format in which the sample was sent.",
                        "enum": [
                            "FFPE Block",
                            "FFPE Scroll",
                            "FFPE Core Punch",
                            "Unstained Slide",
                            "Frozen Tissue",
                            "Sodium Heparin Green-Top Tube",
                            "Streck Tube",
                            "EDTA Tube",
                            "Archival FFPE Block",
                            "Archival FFPE Slides",
                            "Archival FFPE Core Punch",
                            "Archival FFPE Scroll",
                            "Frozen Stool",
                            "DNA-Preserved Stool",
                            "Other"
                        ],
                        "type": "string"
                    },
                    "specimen_type": {
                        "description": "Type of sample sent.",
                        "enum": [
                            "Core Needle Biopsy",
                            "Surgical Resection",
                            "Endoscopic Biopsy",
                            "Punch Biopsy",
                            "Plasma",
                            "PBMC",
                            "Whole Blood",
                            "Stool Sample",
                            "Bone Marrow Aspirate",
                            "Other"
                        ],
                        "type": "string"
                    },
                    "time_point": {
                        "description": "Study related collection time point, as described in the protocol intake form. Example: Progression.",
                        "title": "Time Point",
                        "type": "string"
                    },
                    "tissue_type_submitted": {
                        "description": "The type of tissue that was obtained for the study.",
                        "enum": [
                            "Primary Tumor",
                            "Residual Tumor",
                            "Recurrence",
                            "Metastatic Tumor",
                            "Lymph Node",
                            "Bone Marrow",
                            "Normal Adjacent",
                            "Other"
                        ],
                        "type": "string"
                    }
                },
                "required": [
                    "cimac_sample_id",
                    "aliquots"
                ],
                "title": "Sample",
                "type": "object"
            },
            "mergeOptions": {
                "idRef": "/cimac_sample_id"
            },
            "mergeStrategy": "arrayMergeById",
            "required": true,
            "type": "array"
        },
        "trial_participant_id": {
            "description": "Trial Participant Identifier. Example: PT123.",
            "type": "string"
        }
    },
    "required": [
        "cimac_participant_id",
        "samples"
    ],
    "title": "Participant"
}