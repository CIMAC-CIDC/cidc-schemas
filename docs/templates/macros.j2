{% macro header(schema, scope, required) -%}
{# Generate the section to put at the top of an entity's page #}
    <div class="container">
        <p>
            <a href="index.html">CIDC Data Model</a>
        </p>
        <h1>{{ schema["title"] }}</h1>
        <p>
            <b>Description:</b>  {{ schema["description"] }}
        </p>
        {% if "links" in schema %}
        <p>
            Each {{ schema["title"] }} is <b>linked</b> to:
            <ul>
                {% for link in schema["links"] %}
                    <li>{{ link["link"]["cardinality"]}}
                        <a href='{{scope}}.{{ link["link"]["linked_to"] }}.html'>
                            {{ link["link"]["linked_to"] }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </p>
        {% endif %}
    </div>
{%- endmacro %}

{% macro properties_table(schema, required) -%}
    {% if 'properties' in schema %}
        {% set properties = schema['properties'].items() %}
        {% set allOf = false %}
    {% elif 'allOf' in schema %}
        {% set properties = [] %}
        {% set allOf = true %}
        {% for prop in schema['allOf'] %}
            {% if 'properties' in schema['allOf'] %}
                {% set _ = properties.append(schema['allOf']['properties']) %}
            {% else %}
                {% set _ = properties.append(prop) %}
            {% endif %}
        {% endfor %}
    {% endif %}

    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'Schema' if allOf else 'Property'}}</th>
            <th>Description</th>
            <th>Data Type</th>
            <th>Required/Optional</th>
        </tr>
        </thead>
        {% for prop in properties %}
            {% set prop_name =  '(anonymous)' if prop is mapping else prop[0] %}
            {% set prop_schema = prop if prop is mapping else prop[1] %}
            <tr>
                <td><a name="{{ prop_name }}"></a>{{ prop_name }}</td>
                <td width=25%>{{ prop_schema["description"] }}</td>
                <td>
                    {% if "type" in prop_schema %}
                        &lt;{{ prop_schema["type"]}}&gt; {{ prop_schema["format"]}}
                        <ul>
                        {% for item in prop_schema["enum"] %}
                            <li>{{ item }}</li>
                        {% endfor %}
                        </ul>
                    {% elif "url" in prop_schema %}
                        <a href="schemas.{{ prop_schema['url'] }}">{{ prop_schema['url'].replace('.html', '') }}</a>
                    {% endif %}
                </td>
                <td>
                    {% if prop_name in required %}
                        required
                    {% else %}
                        optional
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>
{%- endmacro %}

{% macro definitions_table(schema, required) -%}
    {% if 'definitions' in schema %}
        <h4>Definitions</h4>
        {% for def_name, def_schema in schema['definitions'].items() %}
            <h5>{{ def_name }}</h5>
            {{ properties_table(def_schema, required) }}
        {% endfor %}
    {% endif %}
{%- endmacro %}