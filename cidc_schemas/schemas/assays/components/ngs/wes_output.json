{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "wes_output",
  "title": "Whole Exome Sequencing Output Files",
  "type": "object",
  "description": "Whole Exome Sequencing Assay Output Files",
  "properties": {
    "tumor": {
      "$ref": "assays/components/alignment.json"
    },
    "normal": {
      "allOf": [
        { "$ref": "assays/components/alignment.json" },
        { "$ref": "assays/components/germline.json" }
      ]
    },
    "combined": {
      "$ref": "assays/components/somatic.json"
    }

  },
  "required": [
    "tumor",
    "normal",
    "combined"
  ]
}