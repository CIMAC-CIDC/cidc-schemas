{
    "$id": "rna_expression",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "category": "metadata",
    "description": "Metadata information for rna expression analysis.\n",
    "properties": {
        "worksheets": {
            "RNA": {
                "data_columns": {
                    "Samples": {
                        "average insert size": {
                            "description": "The average insert size for the library",
                            "exclusiveMinimum": 0,
                            "maximum": 10000,
                            "type": "integer"
                        },
                        "capture date": {
                            "description": "Date of the hybrid capture enrichment",
                            "format": "date",
                            "type": "string"
                        },
                        "cimac aliquot id": {
                            "description": "Aliquot identifier assigned by the CIMAC-CIDC Network. Example: CIMAC-12453.",
                            "type": "string"
                        },
                        "cimac participant id": {
                            "description": "Participant identifier assigned by the CIMAC-CIDC Network. Example: CIMAC-1234.",
                            "type": "string"
                        },
                        "dna input ng": {
                            "description": "Amount of DNA/RNA (in ng) used for library construction",
                            "exclusiveMinimum": 0,
                            "maximum": 10000,
                            "type": "integer"
                        },
                        "enrichment lot": {
                            "description": "Lot number for the bait set",
                            "type": "string"
                        },
                        "forward fastq": {
                            "description": "Path to a file on a users computer",
                            "type": "string"
                        },
                        "genomic source": {
                            "description": "The type of material submitted - tumor/normal/etc",
                            "enum": [
                                "Tumor",
                                "Normal",
                                "Metastasis"
                            ],
                            "type": "string"
                        },
                        "library kit lot": {
                            "description": "Lot number for the library construction kit",
                            "type": "string"
                        },
                        "library prep date": {
                            "description": "Date of library construction.",
                            "format": "date",
                            "type": "string"
                        },
                        "library yield ng": {
                            "description": "Resulting yield (in ng) from library construction",
                            "exclusiveMinimum": 0,
                            "maximum": 2000,
                            "type": "integer"
                        },
                        "read group mapping file": {
                            "description": "Path to a file on a users computer",
                            "type": "string"
                        },
                        "reverse fastq": {
                            "description": "Path to a file on a users computer",
                            "type": "string"
                        },
                        "sequencing batch": {
                            "description": "Identifier for the sequencing batch for this sample",
                            "type": "string"
                        }
                    }
                },
                "preamble_rows": {
                    "assay category": {
                        "description": "Assay category.",
                        "enum": [
                            "Whole Exome Sequencing (WES)",
                            "RNASeq",
                            "Conventional Immunohistochemistry",
                            "Multiplex Immunohistochemistry",
                            "Multiplex Immunofluorescence",
                            "CyTOF",
                            "OLink",
                            "NanoString",
                            "ELISpot",
                            "Multiplexed Ion-Beam Imaging (MIBI)",
                            "Other",
                            "None"
                        ],
                        "type": "string"
                    },
                    "assay creator": {
                        "description": "Indicates what site is filling out the assay.",
                        "enum": [
                            "DFCI",
                            "Mount Sinai",
                            "Stanford",
                            "MD Anderson"
                        ],
                        "type": "string"
                    },
                    "enrichment kit": {
                        "description": "Vendor for the bait set used for enrichment, e.g. Twist, Agilent, IDT",
                        "enum": [
                            "Agilent",
                            "Twist",
                            "IDT",
                            "NEB",
                            "Illumina - TruSeq Stranded PolyA mRNA"
                        ],
                        "type": "string"
                    },
                    "enrichment method": {
                        "description": "Method used for enriching for mRNA",
                        "enum": [
                            "PolyA capture",
                            "Transcriptome capture",
                            "Ribo minus"
                        ],
                        "type": "string"
                    },
                    "lead organization study id": {
                        "description": "Trial identifier used by lead organization, e.g. Center for Experimental Therapeutics Program (CTEP) ID or Industry Sponsored ID.  This is usually a short identifier. Example: E4412.",
                        "type": "string"
                    },
                    "library kit vendor": {
                        "description": "Vendor for the library construction kit, e.g. KAPA",
                        "enum": [
                            "KAPA - Hyper Prep"
                        ],
                        "type": "string"
                    },
                    "library type": {
                        "description": "The type of RNAseq library generated",
                        "enum": [
                            "ff-firststrand",
                            "ff-secondstrand",
                            "ff-unstranded",
                            "fr-firststrand",
                            "fr-secondstrand",
                            "fr-unstranded",
                            "transfrags"
                        ],
                        "type": "string"
                    },
                    "paired end reads": {
                        "description": "Indicate if the sequencing was performed paired or single ended",
                        "enum": [
                            "Paired",
                            "Single"
                        ],
                        "type": "string"
                    },
                    "read length": {
                        "description": "Number of cycles for each sequencing read",
                        "exclusiveMinimum": 0,
                        "maximum": 1000,
                        "type": "integer"
                    },
                    "sequencer platform": {
                        "description": "Sequencer Model, e.g. HiSeq 2500, NextSeq, NovaSeq.",
                        "enum": [
                            "Illumina - HiSeq 2500",
                            "Illumina - HiSeq 3000",
                            "Illumina - NextSeq 550",
                            "Illumina - HiSeq 4000",
                            "Illumina - NovaSeq 6000"
                        ],
                        "type": "string"
                    },
                    "stranded library": {
                        "description": "Is the RNAseq library stranded or not",
                        "type": "boolean"
                    }
                }
            }
        }
    },
    "title": "Metadata file for RNA expression",
    "type": "object"
}