{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "olink_assay",
  "title": "OLink Assay",
  "type": "object",
  "description": "High-throughput multiplexed assays for protein biomarker discovery",
  "links": [
    {
      "link": {
        "cardinality": "exactly_one",
        "linked_to": "artifact"
      }
    }
  ],
  "properties": {
    "assay_prefix": {
      "description": "Prefix to used for the filename",
      "type": "string"
    },
    "filetype": {
      "description": "Type of file being uploaded",
      "type": "string",
      "enum": ["assay", "study"]
    },
    "run_date": {
      "description": "Date when the olink assay was run",
      "type": "string",
      "format": "date"
    },
    "run_time": {
      "description": "Time when the olink assay was run",
      "type": "string",
      "format": "time"
    },
    "instrument": {
      "description": "Instrument used for the assay",
      "type": "string"
    },
    "fludigm_application_version": {
      "description": "Version of the Fluidgm application used",
      "type": "string"
    },
    "fludigm_application_build": {
      "description": "Build of the Fluidgm application used",
      "type": "string"
    },
    "chip_barcode": {
      "description": "Chip barcode number",
      "type": "number"
    },
    "probe_type": {
      "description": "Probe Type",
      "type": "string"
    },
    "passive_reference": {
      "description": "Passive Reference",
      "type": "string"
    },
    "quality_threshold": {
      "description": "Threshold used for quality cutoff",
      "type": "number"
    },
    "baseline_correction": {
      "description": "Method used for baseline correction",
      "type": "string"
    },
    "panel": {
      "description": "Panel used for the assay",
      "type": "string"
    },
    "number_of_sample": {
      "description": "Number of sample analyzed in the assay",
      "type": "number"
    },
    "number_of_sample_failed": {
      "description": "Number of sample failed in the assay",
      "type": "number"
    },
    "npx_manager_version": {
      "description": "Version of NPX manager used for the analysis",
      "type": "string"
    },
    "assay_panel_lot": {
      "description": "Lot Number of the assay panel",
      "type": "number"
    }
  },
  "required": [
    "assay_prefix",
    "filetype",
    "panel",
    "number_of_sample",
    "npx_manager_version"
  ]
}
