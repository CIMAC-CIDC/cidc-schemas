{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ihc_assay_record",
  "title": "IHC assay record",
  "type": "object",
  "description": "A single data record from IHC assay.",
  "properties": {
    "slide_scanner_model": {
      "description": "Model Name of the slide scanner",
      "type": "string",
      "enum": [
        "Hamamatsu",
        "Vectra 2.0"
      ]
    },
    "staining_platform": {
      "description": "Type of staining platform",
      "type": "string",
      "enum": [
        "auto",
        "manual"
      ]
    },
    "autostainer_model": {
      "description": "Model Name of the autostainer",
      "type": "string",
    },
    "antibody_name": {
      "description": ""
    },


    "project_inform_folder": {
      "description": "Folder path containing files produced from an image analysis.",
      "type": "string"
    },
    "ihc_exported_data_folder": {
      "description": "Folder path containing imaging files.",
      "type": "string"
    },
    "files": {
      "$ref": "assays/components/imaging/ihc_input.json"
    }
  },
  "required": ["ihc_exported_data_folder"]
}
