{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "mIF",
  "title": "Metadata file for mIF",
  "description": "Metadata information for multiplex immunoflouresence (mIF).",
  "properties": {
    "worksheets": {
      "mIF": {
        "preamble_rows": {
          "protocol identifier": {
              "merge_pointer": "3/protocol_identifier",
              "type_ref": "clinical_trial.json#properties/protocol_identifier"
          },
          "assay creator": {
            "$ref": "assays/mif_assay.json#properties/assay_creator"
          },
          "slide scanner model": {
            "$ref": "assays/mif_assay.json#properties/slide_scanner_model"
          },
          "staining": {
            "$ref": "assays/mif_assay.json#properties/staining"
          },
          "image analysis software": {
            "$ref": "assays/mif_assay.json#properties/image_analysis_software"
          },
          "image analysis software version": {
            "$ref": "assays/mif_assay.json#properties/image_analysis_software_version"
          },
          "cell segmentation model": {
            "$ref": "assays/mif_assay.json#properties/cell_segmentation_model"
          },
          "positive cell detection model": {
            "$ref": "assays/mif_assay.json#properties/positive_cell_detection"
          }
        },
        "data_columns": {
          "Samples": {
            "Antibody": {
              "$ref": "assays/components/antibody.json#properties/antibody"
            },
            "Clone": {
              "$ref": "assays/components/antibody.json#properties/clone"
            },
            "Antibody Company": {
              "$ref": "assays/components/antibody.json#properties/company"
            },
            "Cat#": {
              "$ref": "assays/components/antibody.json#properties/cat_num"
            },
            "Lot#": {
              "$ref": "assays/components/antibody.json#properties/lot_num"
            },
            "Staining Order": {
              "$ref": "assays/components/mif_antibody.json#properties/staining_order"
            }, 
            "Fluor Wavelength": {
              "$ref": "assays/components/mif_antibody.json#properties/fluor_wavelength"
            },
            "Primary ab Dilution": {
              "$ref": "assays/components/mif_antibody.json#properties/primary_ab_dilution"
            },
            "Dilutent": {
              "$ref": "assays/components/mif_antibody.json#properties/dilutent"
            },
            "Fluor dilution": {
              "$ref": "assays/components/mif_antibody.json#properties/fluor_dilution"
            },
            "Antigen Retrieval Time": {
              "$ref": "assays/components/mif_antibody.json#properties/antigen_retrieval_time"
            },
            "Primary Incubation Time": {
              "$ref": "assays/components/mif_antibody.json#properties/primary_incubation_time"
            },
            "Amplification Time": {
              "$ref": "assays/components/mif_antibody.json#properties/amplification_time"
            }
          }
        }
      },
      "Data": {
        "data_columns": {
          "Samples": {
            "cimac id": {
              "$ref": "sample.json#properties/cimac_id"
            },
            "internal slide id": {
              "$ref": "assays/components/imaging_data.json#properties/internal_slide_id"
            },
            "collection event": {
              "$ref": "sample.json#properties/collection_event_name"
            },
            "staining date": {
              "$ref": "assays/components/imaging_data.json#properties/staining_date"
            },
            "imaging date": {
              "$ref": "assays/components/imaging_data.json#properties/imaging_date"
            },
            "imaging status": {
              "$ref": "assays/components/imaging_data.json#properties/imaging_status"
            },
            "project inform folder": {
              "$ref": "assays/components/local_file.json#properties/file_path"
            },
            "exported_data_folder": {
              "$ref": "assays/components/local_file.json#properties/file_path"
            }
          }
        }
      }
    }
  }
}
