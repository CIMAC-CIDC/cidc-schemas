{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"id": "image",
	"title": "Image",
  "description": "Base information about the aquisition and analysis of a quantitative pathology image\n",
  "allOf": [
    { 
      "$ref": "assays/components/image.json" 
    },
    {
      "properties": {
        "antibody": {
          "type": "array",
          "items": {
            "$ref": "assays/components/mif_antibody.json"
          }
        },
        "data": {
          "type": "array",
          "items": [
            { 
              "type": "object",
              "allOf": [
                {
                  "$ref": "assays/components/identifiers.json" 
                },
                {
                  "properties": {
                    "internal_slide_id": {
                      "type": "string"
                    },
                    "staining_date": {
                      "type": "string",
                      "format": "date"
                    },
                    "imaging_date": {
                      "type": "string",
                      "format": "date"
                    },
                    "project_inform_folder": {
                      "type": "string"
                    },
                    "exported_data_folder": {
                      "type": "string"
                    }
                  }
                }
              ]
            }
          ]
        }
      }
    }
  ],
	"required": []
}