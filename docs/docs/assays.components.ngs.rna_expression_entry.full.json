{
    "$id": "rna_assay_record",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "allOf": [
        {
            "$id": "ngs_assay_record",
            "$schema": "http://json-schema.org/draft-07/schema#",
            "description": "A single data record from an NGS assay",
            "properties": {
                "average_insert_size": {
                    "description": "The average insert size for the library",
                    "exclusiveMinimum": 0,
                    "maximum": 10000,
                    "type": "integer"
                },
                "entry_id": {
                    "description": "Identifier which is unique to this entry, this is clincal trial, participant, aliquot id's",
                    "type": "string"
                },
                "input_ng": {
                    "description": "Amount of DNA/RNA (in ng) used for library construction",
                    "exclusiveMinimum": 0,
                    "maximum": 10000,
                    "type": "integer"
                },
                "library_kit_lot": {
                    "description": "Lot number for the library construction kit",
                    "type": "string"
                },
                "library_prep_date": {
                    "description": "Date of library construction.",
                    "format": "date",
                    "type": "string"
                },
                "library_yield_ng": {
                    "description": "Resulting yield (in ng) from library construction",
                    "exclusiveMinimum": 0,
                    "maximum": 2000,
                    "type": "integer"
                }
            },
            "required": [
                "library_kit_lot",
                "library_prep_date",
                "entry_id"
            ],
            "title": "NGS assay record",
            "type": "object"
        }
    ],
    "description": "A single data record from RNAseq assay",
    "properties": {
        "capture_date": {
            "description": "Date of the hybrid capture enrichment",
            "format": "date",
            "required": true,
            "type": "string"
        },
        "enrichment_vendor_kit": {
            "required": true
        },
        "enrichment_vendor_lot": {
            "description": "Lot number for the bait set",
            "required": true,
            "type": "string"
        },
        "files": {
            "$id": "wes_input",
            "$schema": "http://json-schema.org/draft-07/schema#",
            "allOf": [
                {
                    "$id": "fastq_pairs",
                    "$schema": "http://json-schema.org/draft-07/schema#",
                    "description": "Paired end sequencing file pairs",
                    "properties": {
                        "fastq_1": {
                            "$id": "fastq_artifact",
                            "$schema": "http://json-schema.org/draft-07/schema#",
                            "allOf": [
                                {
                                    "$id": "artifact",
                                    "$schema": "http://json-schema.org/draft-07/schema#",
                                    "description": "Any file artifact associated with a clinical trial.",
                                    "properties": {
                                        "artifact_category": {
                                            "description": "Artifact category.",
                                            "enum": [
                                                "Assay Artifact from CIMAC",
                                                "Pipeline Artifact",
                                                "Manifest File",
                                                "Other"
                                            ],
                                            "type": "string"
                                        },
                                        "artifact_creator": {
                                            "description": "The name of the center that created this artificat",
                                            "enum": [
                                                "DFCI",
                                                "Mount Sinai",
                                                "Stanford",
                                                "MD Anderson"
                                            ],
                                            "type": "string"
                                        },
                                        "assay_category": {
                                            "description": "Assay category.",
                                            "enum": [
                                                "Whole Exome Sequencing (WES)",
                                                "RNASeq",
                                                "Conventional Immunohistochemistry",
                                                "Multiplex Immunohistochemistry",
                                                "Multiplex Immunofluorescence",
                                                "CyTOF",
                                                "OLink",
                                                "NanoString",
                                                "ELISpot",
                                                "Multiplexed Ion-Beam Imaging (MIBI)",
                                                "Other",
                                                "None"
                                            ],
                                            "type": "string"
                                        },
                                        "file_name": {
                                            "description": "The name of the file with extension",
                                            "type": "string"
                                        },
                                        "file_size_bytes": {
                                            "description": "File size in bytes.",
                                            "type": "integer"
                                        },
                                        "file_type": {
                                            "description": "File Type.",
                                            "enum": [
                                                "FASTA",
                                                "FASTQ",
                                                "TIFF",
                                                "VCF",
                                                "TSV",
                                                "Excel",
                                                "NPX",
                                                "BAM",
                                                "MAF",
                                                "PNG",
                                                "JPG",
                                                "XML",
                                                "Other"
                                            ],
                                            "type": "string"
                                        },
                                        "md5_hash": {
                                            "description": "MD5 Hash of artifact.",
                                            "type": "string"
                                        },
                                        "object_url": {
                                            "description": "URL to artifact within Google Bucket.",
                                            "type": "string"
                                        },
                                        "uploaded_timestamp": {
                                            "description": "Timestamp of when artfiact was loaded into the system.",
                                            "type": "string"
                                        },
                                        "uploader": {
                                            "type": "string"
                                        },
                                        "uuid": {
                                            "description": "UUID of artifact.",
                                            "type": "string"
                                        },
                                        "visible": {
                                            "description": "Indicates if the artifiact if visible.  If set to false, the artifact is effectively deleted.",
                                            "type": "boolean"
                                        }
                                    },
                                    "required": [
                                        "file_name",
                                        "object_url",
                                        "uploaded_timestamp",
                                        "file_size_bytes",
                                        "md5_hash",
                                        "artifact_category",
                                        "assay_category",
                                        "file_type"
                                    ],
                                    "title": "Artifact",
                                    "type": "object"
                                },
                                {
                                    "properties": {
                                        "info": {
                                            "type": "object"
                                        }
                                    }
                                }
                            ],
                            "description": "Information about a fastq file",
                            "title": "FastQ Artifact",
                            "type": "object"
                        },
                        "fastq_2": {
                            "$id": "fastq_artifact",
                            "$schema": "http://json-schema.org/draft-07/schema#",
