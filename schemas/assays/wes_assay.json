{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "wes_assay",
  "title": "Whole Exome Sequencing Assay",
  "type": "object",
  "description": "Whole Exome Sequencing Assay",
  "allOf": [{ "$ref": "assays/components/ngs.json" }],
  "properties": {
    "enrichment_vendor_kit": {
      "description": "Vendor for the bait set used for enrichment, e.g. Twist, Agilent, IDT",
      "type": "string",
      "enum": ["Agilent - Human All Exon V7", "Twist", "IDT", "NEB"]
    },
    "enrichment_vendor_lot": {
      "description": "Lot number for the bait set",
      "type": "string"
    },
    "capture_date": {
      "description": "Date of the hybrid capture enrichment",
      "type": "string",
      "format": "date"
    }
  },
  "files": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "cimac_sample_id": {
          "ref": "sample.json#properties/cimac_sample_id"
        },
        "cimac_aliquot_id": {
          "ref": "aliquot.json#properties/cimac_aliquot_id"
        },
        "fastq_f": {
          "$ref": "artifacts/fastq_artifact.json#definitions/properties/data_properties"
        },
        "fastq_r": {
          "$ref": "artifacts/fastq_artifact.json#definitions/properties/data_properties"
        },
        "read_group": {
          "$ref": "artifacts/csv_artifact.json#definitions/properties/data_properties"
        }
      }
    }
  },
  "required": ["enrichment_vendor_kit", "enrichment_vendor_lot", "capture_date"]
}
