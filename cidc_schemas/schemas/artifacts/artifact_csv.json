{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "csv_artifact",
  "title": "CSV Artifact",
  "type": "object",
  "description": "Information about CSV files.",
  "allOf": [
    {
      "$ref": "artifacts/artifact_core.json"
    },
    {
      "properties": {
        "separator": {
          "description": "Delimiter for separating values within the CSV file.",
          "type": "string"
        },
        "header_row": {
          "description": "Number of header lines in the CSV file.",
          "type": "integer"
        },
        "data_format": {
          "description": "Data format.",
          "const": "CSV"
        }
      }
    }
  ],
  "mergeStrategy": "objectMerge",
  "anyOf": [
    { "required": ["separator", "header_row"] },
    { "required": ["upload_placeholder"] }
  ]
}
