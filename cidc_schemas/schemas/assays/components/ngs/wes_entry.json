{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "wes_entry",
  "title": "WES assay record",
  "type": "object",
  "description": "A single data record from WES assay.",
  "additionalProperties": false,
  "allOf": [
    { "$ref": "assays/components/ngs/ngs_assay_record.json" }
  ],
  "properties": {
    "enrichment_vendor_lot": {
      "description": "Lot number for the bait set.",
      "type": "string"
    },
    "capture_date": {
      "description": "Date of the hybrid capture enrichment.",
      "type": "string",
      "format": "date"
    },
    "sequencer_platform": {"$comment": "defined in ngs_assay_core.json"},
    "library_vendor_kit": {"$comment": "defined in ngs_assay_core.json"},
    "paired_end_reads": {"$comment": "defined in ngs_assay_core.json"},
    "read_length": {"$comment": "defined in ngs_assay_core.json"}
  },
  "mergeStrategy": "objectMerge",
  "required": [
      "enrichment_vendor_lot"
    ]
}
