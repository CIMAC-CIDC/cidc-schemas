{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "mif_input",
  "title": "Multiplex Immunoflouresence Input Files",
  "type": "object",
  "description": "mIF Assay Input Files",
  "properties": {
    "whole_slide_imaging_file": {
      "description": "Digital slide produced from the scanning of conventional glass slides.",
      "$ref": "artifacts/artifact_image.json"
    },
    "roi_annotations": {
      "description": "Text describing region of interest for experiment.",
      "$ref": "artifacts/artifact_text.json"
    },
    "mif_output_summary": {
      "description": "Summary of the results of the experiment.",
      "$ref": "artifacts/artifact_csv.json"
    },
    "properties": {
      "regions_of_interest": {
        "type": "array",
        "allOf": [
          { "$ref": "assays/components/mapping.json" },
          { "$ref": "assays/components/composite_image.json" }
        ]
      }
    }
  },
  "required": ["whole_slide_imaging_file"]
}
