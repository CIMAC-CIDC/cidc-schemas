{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "mif",
  "title": "MIF",
  "description": "Base information about the aquisition and analysis of a quantitative pathology image\n",
  "definitions": {
    "data_row": {
      "type": "object",
      "allOf": [
        {
          "$ref": "assays/components/identifiers.json"
        },
        {
          "properties": {
            "internal_slide_id": {
              "type": "string"
            },
            "staining_date": {
              "type": "string",
              "format": "date"
            },
            "imaging_date": {
              "type": "string",
              "format": "date"
            },
            "project_inform_folder": {
              "type": "string"
            },
            "exported_data_folder": {
              "type": "string"
            }
          }
        }
      ]
    }
  },
  "allOf": [
    {
      "$ref": "assays/components/image.json"
    },
    {
      "properties": {
        "antibody": {
          "type": "array",
          "items": {
            "$ref": "assays/components/mif_antibody.json"
          }
        },
        "data": {
          "type": "array",
          "items": { "$ref": "#definitions/data_row" }
        }
      }
    }
  ],
  "required": []
}
