{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "wes",
  "title": "Metadata file for WES",
  "type": "object",
  "category": "metadata",
  "description": "Metadata information for whole exome sequencing (WES) analysis.",
  "properties": {
    "worksheets": {
      "WES": {
        "prism_preamble_object_schema" : "assays/wes_assay.json",
        "prism_preamble_object_pointer" : "/assays/wes/0",
        "prism_data_object_pointer" : "/records/-",
        "preamble_rows": {
          "protocol identifier": {
            "merge_pointer": "3/protocol_identifier",
            "type_ref": "clinical_trial.json#properties/protocol_identifier"
          },
          "assay creator": {
            "merge_pointer": "0/assay_creator",
            "type_ref": "assays/components/assay_core.json#properties/assay_creator"
          },
          "enrichment kit": {
            "merge_pointer": "0/enrichment_vendor_kit",
            "type_ref": "assays/wes_assay.json#properties/enrichment_vendor_kit"
          },
          "library kit vendor": {
            "merge_pointer": "0/library_vendor_kit",
            "type_ref": "assays/components/ngs_assay_core.json#properties/library_vendor_kit"
          },
          "sequencer platform": {
            "merge_pointer": "0/sequencer_platform",
            "type_ref": "assays/components/ngs_assay_core.json#properties/sequencer_platform"
          },
          "paired end reads": {
            "merge_pointer": "0/paired_end_reads",
            "type_ref": "assays/components/ngs_assay_core.json#properties/paired_end_reads"
          },
          "read length": {
            "merge_pointer": "0/read_length",
            "type_ref": "assays/components/ngs_assay_core.json#properties/read_length"
          }
        },
        "data_columns": {
          "Samples": {
            "cimac id": {
              "merge_pointer": "0/cimac_id", 
              "type_ref": "sample.json#properties/cimac_id"
            },
            "library kit lot": {
              "merge_pointer": "0/library_kit_lot", 
              "type_ref": "assays/components/ngs/ngs_assay_record.json#properties/library_kit_lot"
            },
            "enrichment lot": {
              "merge_pointer": "0/enrichment_vendor_lot", 
              "type_ref": "assays/components/ngs/wes_assay_record.json#properties/enrichment_vendor_lot"
            },
            "library prep date": {
              "merge_pointer": "0/library_prep_date", 
              "type_ref": "assays/components/ngs/ngs_assay_record.json#properties/library_prep_date"
            },
            "capture date": {
              "merge_pointer": "0/capture_date", 
              "type_ref": "assays/components/ngs/wes_assay_record.json#properties/capture_date"
            },
            "dna input ng": {
              "merge_pointer": "0/input_ng", 
              "type_ref": "assays/components/ngs/ngs_assay_record.json#properties/input_ng"
            },
            "library yield ng": {
              "merge_pointer": "0/library_yield_ng", 
              "type_ref": "assays/components/ngs/ngs_assay_record.json#properties/library_yield_ng"
            },
            "average insert size": {
              "merge_pointer": "0/average_insert_size", 
              "type_ref": "assays/components/ngs/ngs_assay_record.json#properties/average_insert_size"
            },
            "forward fastq": {
              "merge_pointer": "0/files/r1", 
              "gcs_uri_format": "{protocol identifier}/{cimac id}/wes/r1.fastq",
              "is_artifact" : 1,
              "type_ref": "assays/components/local_file.json#properties/file_path"
            },
            "reverse fastq": {
              "merge_pointer": "0/files/r2", 
              "gcs_uri_format": "{protocol identifier}/{cimac id}/wes/r2.fastq",
              "is_artifact" : 1,
              "type_ref": "assays/components/local_file.json#properties/file_path"
            },
            "read group mapping file": {
              "merge_pointer": "0/files/read_group_mapping_file", 
              "gcs_uri_format": "{protocol identifier}/{cimac id}/wes/rgm.txt",
              "is_artifact" : 1,
              "type_ref": "assays/components/local_file.json#properties/file_path"
            }
          }
        }
      }
    }
  }
}
