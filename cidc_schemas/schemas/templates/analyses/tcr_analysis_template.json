{
    "title": "TCR analysis template",
    "description": "Metadata information for TCRseq Analysis output.",
    "prism_template_root_object_schema": "assays/components/ngs/tcr/tcr_analysis.json",
    "prism_template_root_object_pointer": "/analysis/tcr_analysis",
    "properties": {
        "worksheets": {
            "TCRseq Analysis": {
                "preamble_rows": {
                        "protocol identifier": {
                            "merge_pointer": "2/protocol_identifier",
                            "type_ref": "clinical_trial.json#properties/protocol_identifier"
                        },
                        "batch id": {
                            "merge_pointer": "0/batch_id",
                            "type_ref": "assays/tcr_assay.json#properties/batch_id"
                        },
                        "summary info": {
                            "merge_pointer": "0/summary_info",
                            "type_ref": "assays/components/local_file.json#properties/file_path",
                            "gcs_uri_format": "{protocol identifier}/tcr_analysis/{batch id}/summary_info.csv",
                            "is_artifact": 1
                        }
                    },
                    "prism_data_object_pointer": "/records/-",
                    "data_columns": {
                        "TCRseq Runs": {
                            "cimac id": {
                                "merge_pointer": "0/cimac_id",
                                "type_ref": "sample.json#properties/cimac_id"
                            },
                            "TRA clone": {
                                "merge_pointer": "0/output_files/tra_clone",
                                "type_ref": "assays/components/local_file.json#properties/file_path",
                                "gcs_uri_format": "{protocol identifier}/tcr_analysis/{batch id}/{cimac id}/tra_clone.csv",
                                "is_artifact": 1
                            },
                            "TRB clone": {
                                "merge_pointer": "0/output_files/trb_clone",
                                "type_ref": "assays/components/local_file.json#properties/file_path",
                                "gcs_uri_format": "{protocol identifier}/tcr_analysis/{batch id}/{cimac id}/trb_clone.csv",
                                "is_artifact": 1
                            }
                        }
                    }
            }
        }
    }
}