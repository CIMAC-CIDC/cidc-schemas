            "title": "Whole Exome Sequencing Input Files",
            "type": "object"
        },
        "sequencing_batch": {
            "description": "Identifier for the sequencing batch for this sample",
            "type": "string"
        }
    },
    "required": [
        "enrichment_vendor_lot",
        "enrichment_vendor_kit",
        "capture_date"
    ],
    "title": "RNAseq assay record",
    "type": "object"
