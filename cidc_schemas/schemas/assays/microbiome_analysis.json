        "excluded_samples": {"$ref": "assays/components/excluded_samples.json"}
      }
    }
  },

  "additionalProperties": false,
  "properties": {
    "batches": {
      "type": "array",
      "items": {"$ref": "assays/microbiome_analysis.json#definitions/batch"},
      "mergeStrategy": "arrayMergeById",
      "mergeOptions": {
        "idRef": "/batch_id"
      }
    }
  }
}